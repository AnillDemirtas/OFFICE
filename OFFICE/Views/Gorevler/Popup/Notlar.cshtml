

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Yeni Not</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Message:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a type="button" class="btn btn-sm btn-primary" href="@Url.Action("HareketDetay","Gorevler",new {gorev_id = @ViewBag.gorev_id})">Kaydet</a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Çıkış</button>
            </div>
        </div>
    </div>
</div>

